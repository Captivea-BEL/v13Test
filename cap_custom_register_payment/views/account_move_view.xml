<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cap_acc_inv_bill_form_view_inherit" model="ir.ui.view">
            <field name="name">cap.acc.inv.bill.form.view.inherit</field>
            <field name="model">account.move</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[@id='header_right_group']/field[@name='invoice_date']" position="after">
                    <field name="early_terms_date"/>
                    <field name="early_terms_total_due"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                	<field name="payment_term_discount_inclusion"/>
	            </xpath>
	            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group[2]/field[@name='account_id']" position="after">
					<field name="payment_term_discount_inclusion"/>
	            </xpath>
	            <xpath expr="//field[@name='line_ids']/tree/field[@name='amount_currency']" position="before">
					<field name="payment_term_discount_inclusion" invisible="1"/>
	            </xpath>
            </field>
        </record>
    </data>
</odoo>