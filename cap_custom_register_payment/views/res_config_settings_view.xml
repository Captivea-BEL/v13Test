<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_custom_reg_payment_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.custom.reg.payment</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <h2>Taxes</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="These taxes are set in any new product created.">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Discount Accounts</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Discount Accounts to be applied while Registering Payments.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="AR Discount Account" for="ar_discount_account" class="col-lg-3 o_light_label"/>
                                        <field name="ar_discount_account"/>
                                    </div>
                                    <div class="row">
                                        <label string="AP Discount Account" for="ap_discount_account" class="col-lg-3 o_light_label"/>
                                        <field name="ap_discount_account"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>